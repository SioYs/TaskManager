@model TaskList

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h2>Create TaskList</h2>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="TaskList" asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
               @* <div class="form-group">
                    <label asp-for="OwnerName" class="control-label"></label>
                    <input asp-for="OwnerName" class="form-control" />
                    <span asp-validation-for="OwnerName" class="text-danger"></span>
                </div>*@
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
