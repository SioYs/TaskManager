@model TaskList

<div class="container d-flex justify-content-center mt-5">
    <div class="card w-50">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Delete TaskList</h4>
            <p class="card-text text-center mb-5">Are you sure you want to delete this task list?</p>
            <div class="row mb-3">
                <div class="col-sm-3">
                    <h6 class="text-muted">Name:</h6>
                </div>
                <div class="col-sm-9">
                    <h6 class="text-primary">@Html.DisplayFor(model => model.Name)</h6>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col-sm-3">
                    <h6 class="text-muted">Description:</h6>
                </div>
                <div class="col-sm-9">
                    <h6 class="text-primary">@Html.DisplayFor(model => model.Description)</h6>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger mr-3" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
