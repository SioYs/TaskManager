@using TaskManagerWeb.ViewModels

@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <form asp-controller="Account" asp-action="Login" method="post" class="border rounded p-4">
                <h2 class="text-center mb-4">Login</h2>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">

                    <label asp-for="Email"> Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="text-center">

                </div>
                <center>
                    <button type="submit" class="btn btn-primary btn-block mt-2">Login</button>

                </center>
                <div>
                    <h7 class="text-center mb-6"  >Not yet a member?
                         <a asp-controller="Account" asp-action="SignUp" class="m-control-plaintext">Sing Up now</a>
                    </h7>
                </div>



            </form>
        </div>
    </div>
</div>

